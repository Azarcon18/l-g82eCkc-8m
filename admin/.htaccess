<?php 
$page = isset($_GET['page']) ? $_GET['page'] : 'home';

// Add .php if not present
if (!str_ends_with($page, '.php') && !is_dir($page)) {
    $page .= '.php';
}

if (!file_exists($page) && !is_dir($page)) {
    include '404.html';
} else {
    if (is_dir($page)) {
        include $page . '/index.php';
    } else {
        include $page;
    }
}
?>